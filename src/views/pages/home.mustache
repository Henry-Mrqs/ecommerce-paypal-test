<!DOCTYPE html>
<html lang="en">
{{>partials/head}}
<body>
    
    <div class="full-width">

        <div class="row full-width">

            <div class="col-md-6 col-lg-6 padding-none">
                <section class="ilustration">
                    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active" data-bs-interval="8000">
                                <img src="/assets/couple.jpg" class="d-block w-100 fit-height" alt="...">
                            </div>
                            <div class="carousel-item" data-bs-interval="8000">
                                <img src="/assets/friends.jpg" class="d-block w-100 fit-height" alt="...">
                            </div>
                            <div class="carousel-item" data-bs-interval="8000">
                                <img src="/assets/girls.jpg" class="d-block w-100 fit-height" alt="...">
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="col-md-6 col-lg-6 padding-container right-form">
            
                {{>partials/header}}

                <div class="container register">

                    <div class="register-top">
                        <h1>Register</h1>
                        <hr>
                        <p>The information below was pre-filled according to requests, but these fields can be changed by you.</p>
                    </div>

                    <div class="form">
                        <form method="POST">

                            <div class="name">
                                <i class="fa fa-user" aria-hidden="true"></i>
                                <input type="text" name="name" id="name" value="Emma" placeholder="Name">
                                <input type="text" name="lastName" id="lastName" value="Miller Thompson" placeholder="Last Name">
                            </div>

                            <div class="phone">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <input type="text" name="phone" id="phone" value="+1 (646) 265-7864" placeholder="Phone">
                            </div>

                            <div class="email">
                                <i class="fa fa-at" aria-hidden="true"></i>
                                <input type="text" name="email" id="email" value="emma.shopper28@gmail.com" placeholder="Email">
                            </div>

                            <h4>Address</h4>
                            <hr>

                            <div class="address">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <input type="text" name="addressLine1" id="addressLine1" value="1150 Sterling Pl Apt 8" placeholder="Address line 1">
                                <input type="text" name="addressLine2" id="addressLine2" value="Brooklyn, NY" placeholder="Address line 2">
                            </div>

                            <div class="address-cont">
                                <input type="text" name="state" id="state" value="New York" placeholder="State">
                                <input type="text" name="country" id="country" value="United State" placeholder="Country">
                                <input type="text" name="zip" id="zip" value="11213" placeholder="Zip">
                            </div>

                            <div class="btn-submit">
                                <input type="submit" value="Submit">
                            </div>

                        </form>


                    </div>

                </div>
            
            </div>

        </div>

    </div>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    
</body>
</html>