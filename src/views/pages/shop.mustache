{{>partials/head}}
<body>
    <div class="container-shop">
        <div class="left-content">
            <div class="container">
                <header>
                    <nav class="navbar navbar-expand-lg">
                        <div class="container-fluid">
                            <a class="navbar-brand" href="#">Your Shopping</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                    <li class="nav-item">
                                        <a class="nav-link active" aria-current="page" href="http://localhost/">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" aria-current="page" href="http://localhost/shop">Shop</a>
                                    </li>
                                </ul>
                                {{!--
                                    <form class="d-flex" role="search">
                                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                                        <button class="btn btn-outline-success" type="submit">Search</button>
                                    </form>
                                --}}
                            </div>
                        </div>
                    </nav>
                </header>
                <div class="title-shop">
                    <h1>CHOOSE YOUR NEW STYLE</h1>
                </div>
                <hr>
                <div class="flex-product">
                    {{ #productList }}
                        <div class="product">
                            <img src="/assets/{{ image }}" alt="{{ name }}">
                            <div class="description">
                                <div class="text">
                                    <p class="name-product">{{ name }}</p>
                                    <p class="value-product">${{ price }}</p>
                                </div>
                                <div class="call-to-action">
                                    <form class="addToCartForm" method="POST">
                                        <input type="hidden" type="number" name="productId" value="{{productId}}">
                                        <input type="hidden" name="image" value="{{image}}">
                                        <input type="hidden" name="name" value="{{name}}">
                                        <input type="hidden" type="number" name="price" value="{{price}}">
                                        <input type="hidden" type="number" name="amount" value=1>
                                        <input  type="submit" value="Buy" class="button-buy">
                                    </form>
                                </div>
                            </div>
                        </div> 
                    {{ /productList }}
                </div>
            </div>
        </div>
        <div class="right-content">
            <div class="padding-resume">
                <h2>Cart Resume</h2>
                <div id="cart-content">

                    {{ #cartList }}
                        <div class="product-resume">
                            <img src="/assets/{{ image }}" alt="{{ name }}">
                            <div class="description">
                                <p class="name-product">{{ name }}</p>
                                <p class="value-product">{{ price }}</p>
                            </div>
                            <div class="quantity-product">
                                <p>{{ amount }}</p>
                                <div class="incrase-decrase">
                                    <form method="POST">
                                        <div>
                                            <input type="hidden" type="number" name="productId" value="{{productId}}">
                                            <button type="submit" class="button-buy">
                                                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                                            </button>
                                        </div>
                                        </form>
                                    <form method="POST">
                                        <div>
                                            <input type="hidden" type="number" name="productId" value="{{productId}}">
                                            <input type="hidden" name="remove" value="true">
                                            <button type="submit" class="button-buy">
                                                <i class="fa fa-minus-circle" aria-hidden="true"></i>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {{ /cartList }}
                    <!-- 
                        {{ ^cartList }}

                        {{ /cartList }}
                    -->
                    
                </div>
                <div id="send-cart">
                    <form class="addToCartForm" method="POST" action="/pay">
                        <input type="hidden" name="productsInCart" value="{{JSON.stringify(productList)}}">
                    </form>
                </div>
            </div>
        </div>
        <div id="toastHBox"></div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        function updateCartDisplay() {
        var cartContent = document.getElementById('cart-content');
        var sendCart = document.querySelector('#send-cart form');
        var productsInCart = JSON.parse(localStorage.getItem('cart') || '[]');

        // Limpe o conteúdo atual do carrinho
        cartContent.innerHTML = '';
        clearFormContent(); // Limpe apenas o botão "Finish"

        // Adicione os produtos ao carrinho
        productsInCart.forEach(product => {
            console.log('Product:', product); // Log para verificar o produto

            var productElement = document.createElement('div');
            productElement.innerHTML = `
                <div class="product-resume">
                    <img src="/assets/${product.image}" alt="${product.name}">
                    <div class="description">
                        <p class="name-product">${product.name}</p>
                        <p class="value-product">${product.price}</p>
                    </div>
                    <div class="quantity-product">
                        <p>${product.quantity}</p>
                        <div class="incrase-decrase">
                            <i class="fa fa-plus-circle" aria-hidden="true" onclick="changeQuantity('${product.productId}', 1)"></i>
                            <i class="fa fa-minus-circle" aria-hidden="true" onclick="changeQuantity('${product.productId}', -1)"></i>
                        </div>
                    </div>
                </div>`;
            cartContent.appendChild(productElement);
        });

        // Adicione o botão "Finish" apenas se houver produtos no carrinho
        var btnSendCart = document.querySelector('.send-cart-btn');
        console.log('Products in Cart:', productsInCart); // Log para verificar os produtos no carrinho

        if (productsInCart.length > 0 && !btnSendCart) {
            btnSendCart = document.createElement('button');
            btnSendCart.className = 'send-cart-btn finish-button'; // Adiciona a classe 'finish-button'
            btnSendCart.type = 'submit';
            btnSendCart.textContent = 'Finish';
            btnSendCart.onclick = function() {
                console.log('Sending data to the server:', JSON.stringify(productsInCart));
            };
            sendCart.appendChild(btnSendCart);
            console.log('Finish button added'); // Log para verificar se o botão "Finish" foi adicionado
        } else if (productsInCart.length === 0 && btnSendCart) {
            // Remova o botão se o carrinho estiver vazio
            btnSendCart.remove();
            console.log('Finish button removed'); // Log para verificar se o botão "Finish" foi removido
        }

        // Calcule o total e armazene em sessionStorage
        calculateAndStoreTotal();
    }

    </script>
</body>
</html>
